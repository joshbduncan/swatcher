#!/bin/sh

function build {
    # build the app for pypi
    source venv/bin/activate
    if test ; then
        echo "âš™ï¸ building Swatcher..."
        python -m build
    else
        echo "âŒ build was unsuccessful"
    fi
}

function cleanup {
    # cleanup the flask sessions and images
    echo "ğŸ—‘ cleaning up the junk..."
    rm -f examples/flask_app/flask_session/*
    rm -f examples/flask_app/static/images/*
}

function test {
    # test app using pytest
    echo "ğŸ§¾ testing Swatcher..."
    source venv/bin/activate
    pytest
}

function upload {
    # upload to pypi
    echo "â¬†ï¸ uploading to pypi..."
    twine upload dist/*
}

function help {
  printf "%s <task> [args]\n\nTasks:\n" "${0}"

  compgen -A function | grep -v "^_" | cat -n

  printf "\nExtended help:\n  Each task has comments for general usage\n"
}

TIMEFORMAT=$'\nTask completed in %3lR'
time "${@:-help}"
